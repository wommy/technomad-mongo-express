{
  "name": "technomad-mongo-express",
  "version": "1.0.0",
  "repository": "git@github.com:wommy/technomad-mongo-express.git",
  "author": "wommy <tom@technomad.media>",
  "license": "MIT",
  "scripts": {
    "dep": "yarn add express; yarn add -D typescript ts-node nodemon @types/node @types/express;",
    "gitignore": "echo -e 'node_modules\ndist' >> .gitignore",
    "tsci": "tsc --init --target es6 --allowJs --checkJs --outDir dist --rootDir src --moduleResolution node",
    "init": "yarn run dep; yarn run gitignore; yarn run tsci",
    "start": "NODE_ENV=production tsc && node dist/index.js",
    "start:dev": "NODE_ENV=development nodemon src/index.ts"
  },
  "dependencies": {
    "connect-mongo": "^4.4.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.2",
    "express-session": "^1.17.2",
    "method-override": "^3.0.0",
    "mongoose": "^5.13.2",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-handlebars": "^5.3.1",
    "@types/express-session": "^1.17.4",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.0.0",
    "@types/passport": "^1.0.7",
    "@types/passport-google-oauth20": "^2.0.9",
    "nodemon": "^2.0.9",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
